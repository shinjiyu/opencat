# Server
PORT=3000
HOST=0.0.0.0

# Admin
ADMIN_SECRET=change-me-to-a-long-random-string

# Upstream LLM provider
UPSTREAM_BASE_URL=https://your-llm-provider.com/v1
UPSTREAM_API_KEY=your-api-key-here
UPSTREAM_DEFAULT_MODEL=deepseek/deepseek-chat

