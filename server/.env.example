# Server
PORT=3000
HOST=0.0.0.0

# Admin
ADMIN_SECRET=change-me-to-a-long-random-string

# Upstream LLM provider (智谱 OpenAI-compatible API)
UPSTREAM_BASE_URL=https://open.bigmodel.cn/api/coding/paas/v4
UPSTREAM_API_KEY=your-zhipu-api-key-here
UPSTREAM_DEFAULT_MODEL=glm-5

# Per-minute rate limit per token (default: 20)
# RPM_LIMIT=20

# Public URL (used in token responses)
PUBLIC_BASE_URL=https://your-server.example.com

# Token allocation (build/packaging only; install script must NOT call this)
# When set, POST /api/tokens requires header X-Build-Secret to match
BUILD_SECRET=
